<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:overScrollMode="never"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/registerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_12sdp">

            <LinearLayout
                android:id="@+id/topbar"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_22sdp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_22sdp"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Register"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_22sdp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_below="@id/topbar"
                android:layout_centerHorizontal="true"
                android:src="@drawable/register" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email_input_layout2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textColorHint="@color/light_grey"
                    app:boxStrokeColor="@color/light_grey"
                    app:hintTextColor="@color/dark_grey">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email_edit_text2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_44sdp"
                        android:fontFamily="@font/ubuntu"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textColor="@color/dark_grey"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/_10sdp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password_input_layout2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/light_grey"
                    app:boxStrokeColor="@color/light_grey"
                    app:endIconMode="password_toggle"
                    app:hintTextColor="@color/dark_grey"
                    app:passwordToggleTint="#7A7A7A">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password_edit_text2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_44sdp"
                        android:fontFamily="@font/ubuntu"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/dark_grey"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/_10sdp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/firstName_input_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColorHint="@color/light_grey"
                    app:boxStrokeColor="@color/light_grey"
                    app:hintTextColor="@color/dark_grey">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/firstName_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_44sdp"
                        android:fontFamily="@font/ubuntu"
                        android:hint="Name"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/dark_grey"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/_10sdp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/create_account_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_below="@id/layout2"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:fontFamily="@font/raleway"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Create Account"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    app:backgroundTint="@color/colorPrimary" />

            </LinearLayout>





        </RelativeLayout>



    </RelativeLayout>

</ScrollView>
